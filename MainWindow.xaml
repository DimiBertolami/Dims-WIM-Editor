<Window x:Class="DimsISOTweaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimsISOTweaker"
        mc:Ignorable="d"
        Title="Dimi's PE builder" Height="260" Width="690">
    <Grid Margin="15,0,10,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="-72,-20,62,19" RenderTransformOrigin="0.685,0.344"/>
        <Label Content="to" HorizontalAlignment="Left" Margin="67,42,0,0" VerticalAlignment="Top" Height="24" Width="21"/>
        <TextBox x:Name="ISO" HorizontalAlignment="Left" Margin="0,14,0,0" TextWrapping="Wrap" Text="C:\Users\Admin\Desktop\dewSystems\ISO\Gandalf10PE.ISO" VerticalAlignment="Top" Width="328" Height="18"/>
        <TextBox x:Name="MountPoint" HorizontalAlignment="Left" Margin="88,45,0,0" TextWrapping="Wrap" Text="C:\MOUNT" VerticalAlignment="Top" Width="70" AutomationProperties.HelpText="test" Height="19"/>
        <Button Content="Mount ISO" HorizontalAlignment="Left" Margin="345,12,0,0" VerticalAlignment="Top" Width="64" Click="MountISO" Height="20"/>
        <Button Content="Mount WIM" HorizontalAlignment="Left" Margin="164,44,0,0" VerticalAlignment="Top" Width="76" Click="MountWIM" Height="20"/>
        <Button Content="Get WimInfo" HorizontalAlignment="Left" Margin="0,74,0,0" VerticalAlignment="Top" Width="96" Click="getWIMInfo" Height="20"/>
        <Button Content="Add drivers" HorizontalAlignment="Left" Margin="13,122,0,0" VerticalAlignment="Top" Width="67" Click="AddPEDrivers" Height="20"/>
        <Button Content="Slipstream updates" HorizontalAlignment="Left" Margin="88,123,0,0" VerticalAlignment="Top" Click="SlipstreamKB" Height="20" Width="105"/>
        <Button Content="UnMount" HorizontalAlignment="Left" Margin="244,44,0,0" VerticalAlignment="Top" Width="58" Click="UnMountWIM" Height="20"/>
        <Button x:Name="Help" Content="Help" HorizontalAlignment="Left" Margin="538,14,0,0" VerticalAlignment="Top" Click="about" Height="19" Width="36"/>
        <Button Content="ADK Setup" HorizontalAlignment="Left" Margin="24,166,0,0" VerticalAlignment="Top" Click="adksetup" Width="72" ToolTip="Quick silent installer for windows Assesment and Deployment Kit" Height="20"/>
        <Button Content="ADK WPE Setup" HorizontalAlignment="Left" Margin="120,166,0,0" VerticalAlignment="Top" Click="ADKPESetup" ToolTip="Quick silent installer for windows ADK PE Addon Setup" Height="20" Width="88"/>
        <Button Content="Get-MountedWimInfo" HorizontalAlignment="Left" Margin="105,74,0,0" VerticalAlignment="Top" Width="125" Click="getMountedWIMInfo" Height="20"/>
        <Button x:Name="Copy_WIM" Content="Copy WIM" HorizontalAlignment="Left" Margin="0,45,0,0" VerticalAlignment="Top" Width="67" Click="CopyWIM" Height="19" />
        <Button Content="Dismount" HorizontalAlignment="Left" Margin="425,12,0,0" VerticalAlignment="Top" Click="dismountISO" Height="20" Width="55"/>
        <Button Content="add cabs" HorizontalAlignment="Left" Margin="202,123,0,0" VerticalAlignment="Top" ToolTip="these are the optional winPE components..." Height="20" Width="59" Click="addCabs"/>
        <Button Content="TestMe!" HorizontalAlignment="Left" Margin="589,194,0,0" VerticalAlignment="Top" ToolTip="THIS IS MY TESTBUTTON USE AT OWN RISK!" Click="Testme" Height="20" Width="45"/>
        <Button Content="Discard" HorizontalAlignment="Center" Margin="0,44,0,0" VerticalAlignment="Top" Width="52" Height="20" Click="UnMountWIMDiscard"/>
        <Button Content="Cleanup MountPoints" HorizontalAlignment="Left" Margin="452,45,0,0" VerticalAlignment="Top" Width="122" Height="19" Click="CleanUpMountPoints"/>
        <Button Content="Shell" HorizontalAlignment="Left" Margin="490,14,0,0" VerticalAlignment="Top" Width="36" Click="SpawnAShell" Height="18"/>
        <Button Content="add apps" HorizontalAlignment="Left" Margin="270,123,0,0" VerticalAlignment="Top" ToolTip="to add optiona apps... doesn't work though yet.." Height="20" Width="62"/>
        <Button Content="Cleanup Wim" HorizontalAlignment="Left" Margin="367,45,0,0" VerticalAlignment="Top" Width="78" Height="19" Click="CleanupWim"/>
        <Button Content="Get-Packages" HorizontalAlignment="Left" Margin="240,74,0,0" VerticalAlignment="Top" Width="83" Height="20" Click="getPackages"/>
    </Grid>
</Window>
