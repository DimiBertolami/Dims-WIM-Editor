<Window x:Class="DimsISOTweaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimsISOTweaker"
        mc:Ignorable="d"
        Title="Dimi's PE builder" Height="260" Width="690">
    <Grid Margin="15,0,10,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Border BorderBrush="Black" BorderThickness="1" Margin="-10,0,0,0" RenderTransformOrigin="0.685,0.344"/>
        <Label Content="to" HorizontalAlignment="Left" Margin="118,64,0,0" VerticalAlignment="Top" Height="24" Width="21"/>
        <Label x:Name="LblISO" Content="ISO" HorizontalAlignment="Left" Margin="43,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.184,0.772" Width="34" Height="24"/>
        <TextBox x:Name="ISO" HorizontalAlignment="Left" Margin="5,35,0,0" TextWrapping="Wrap" Text="C:\Users\Admin\Desktop\dewSystems\ISO\Gandalf10PE.ISO" VerticalAlignment="Top" Width="328" Height="18"/>
        <TextBox x:Name="MountPoint" HorizontalAlignment="Left" Margin="139,64,0,0" TextWrapping="Wrap" Text="C:\MOUNT" VerticalAlignment="Top" Width="70" AutomationProperties.HelpText="test" Height="20"/>
        <Button Content="Mount ISO" HorizontalAlignment="Left" Margin="348,35,0,0" VerticalAlignment="Top" Width="64" Click="MountISO" Height="20"/>
        <Button Content="Mount WIM" HorizontalAlignment="Left" Margin="214,64,0,0" VerticalAlignment="Top" Width="76" Click="MountWIM" Height="20"/>
        <Button Content="Get WimInfo" HorizontalAlignment="Left" Margin="12,95,0,0" VerticalAlignment="Top" Width="96" Click="getWIMInfo" Height="20"/>
        <Button Content="Add drivers" HorizontalAlignment="Left" Margin="13,122,0,0" VerticalAlignment="Top" Width="94" Click="AddPEDrivers" Height="20"/>
        <Button Content="Slipstream updates" HorizontalAlignment="Left" Margin="139,123,0,0" VerticalAlignment="Top" Click="SlipstreamKB" Height="20" Width="105"/>
        <Button Content="UnMount" HorizontalAlignment="Left" Margin="297,64,0,0" VerticalAlignment="Top" Width="58" Click="UnMountWIM" Height="20"/>
        <Button x:Name="Help" Content="Help" HorizontalAlignment="Left" Margin="598,35,0,0" VerticalAlignment="Top" Click="about" Height="23" Width="36"/>
        <Button Content="ADK Setup" HorizontalAlignment="Left" Margin="24,166,0,0" VerticalAlignment="Top" Click="adksetup" Width="72" ToolTip="Quick silent installer for windows Assesment and Deployment Kit" Height="20"/>
        <Button Content="ADK WPE Setup" HorizontalAlignment="Left" Margin="120,166,0,0" VerticalAlignment="Top" Click="ADKPESetup" ToolTip="Quick silent installer for windows ADK PE Addon Setup" Height="20" Width="88"/>
        <Button Content="Get-MountedWimInfo" HorizontalAlignment="Left" Margin="139,95,0,0" VerticalAlignment="Top" Width="125" Click="getMountedWIMInfo" Height="20"/>
        <Button x:Name="Copy_WIM" Content="Copy WIM" HorizontalAlignment="Left" Margin="10,64,0,0" VerticalAlignment="Top" Width="100" Click="CopyWIM" Height="20" />
        <Button Content="Dismount" HorizontalAlignment="Left" Margin="429,34,0,0" VerticalAlignment="Top" Click="dismountISO" Height="20" Width="55"/>
        <Button Content="add cabs" HorizontalAlignment="Left" Margin="264,123,0,0" VerticalAlignment="Top" ToolTip="these are the optional winPE components..." Height="20" Width="59" Click="addCabs"/>
        <Button Content="TestMe!" HorizontalAlignment="Left" Margin="589,194,0,0" VerticalAlignment="Top" ToolTip="THIS IS MY TESTBUTTON USE AT OWN RISK!" Click="Testme" Height="20" Width="45"/>
        <Button Content="Discard" HorizontalAlignment="Left" Margin="360,64,0,0" VerticalAlignment="Top" Width="52" Height="20" Click="UnMountWIMDiscard"/>
        <Button Content="Cleanup MountPoints" HorizontalAlignment="Left" Margin="512,64,0,0" VerticalAlignment="Top" Width="122" Height="20" Click="CleanUpMountPoints"/>
        <Button Content="Shell" HorizontalAlignment="Left" Margin="555,35,0,0" VerticalAlignment="Top" Width="36" Click="SpawnAShell" Height="23"/>
        <Button Content="add apps" HorizontalAlignment="Left" Margin="328,123,0,0" VerticalAlignment="Top" ToolTip="to add optiona apps... doesn't work though yet.." Height="20" Width="62"/>
        <Button Content="Cleanup Wim" HorizontalAlignment="Left" Margin="429,64,0,0" VerticalAlignment="Top" Width="78" Height="20" Click="CleanupWim"/>
    </Grid>
</Window>
