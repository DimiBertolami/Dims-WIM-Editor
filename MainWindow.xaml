<Window x:Class="DimsISOTweaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimsISOTweaker"
        mc:Ignorable="d"
        Title="Dimi's PE builder" Height="240" Width="360">
    <Grid Margin="0,0,10,4">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="59*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="LblISO" Content="ISO" HorizontalAlignment="Left" Margin="30,6,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.184,0.772" Width="34" Height="24" Grid.ColumnSpan="2"/>
        <TextBox x:Name="ISO" HorizontalAlignment="Left" Margin="5,35,0,0" TextWrapping="Wrap" Text="C:\Users\Admin\Desktop\dewSystems\ISO\Gandalf10PE.ISO" VerticalAlignment="Top" Width="335" Grid.ColumnSpan="2"/>
        <Label Content="MountDir" HorizontalAlignment="Left" Margin="0,58,0,0" VerticalAlignment="Top" Width="80" Grid.ColumnSpan="2"/>
        <TextBox x:Name="MountPoint" HorizontalAlignment="Left" Margin="30,62,0,0" TextWrapping="Wrap" Text="C:\MOUNT" VerticalAlignment="Top" Width="85" AutomationProperties.HelpText="test" Grid.Column="1"/>
        <Button Content="Mount ISO" HorizontalAlignment="Left" Margin="4,87,0,0" VerticalAlignment="Top" Width="121" Click="MountISO" Grid.ColumnSpan="2"/>
        <Button x:Name="Copy_WIM" Content="Copy WIM" HorizontalAlignment="Left" Margin="75,87,0,0" VerticalAlignment="Top" Width="100" Click="CopyWIM" Grid.Column="1" />
        <Button Content="Mount WIM" HorizontalAlignment="Left" Margin="180,87,0,0" VerticalAlignment="Top" Width="105" Click="MountWIM" Grid.Column="1"/>
        <Button Content="Get WimInfo" HorizontalAlignment="Left" Margin="5,110,0,0" VerticalAlignment="Top" Width="95" Click="getWIMInfo" Grid.ColumnSpan="2"/>
        <Button Content="Add drivers" HorizontalAlignment="Left" Margin="75,138,0,0" VerticalAlignment="Top" Width="100" Click="AddPEDrivers" Grid.Column="1"/>
        <Button Content="Slipstream updates" HorizontalAlignment="Left" Margin="180,138,0,0" VerticalAlignment="Top" Click="SlipstreamKB" Grid.Column="1"/>
        <Button Content="UnMount WIM" HorizontalAlignment="Left" Margin="180,112,0,0" VerticalAlignment="Top" Width="105" Click="UnMountWIM" Grid.Column="1"/>
        <Button Content="about" HorizontalAlignment="Left" Margin="233,163,0,0" VerticalAlignment="Top" Click="about" Height="36" Width="52" Grid.Column="1"/>
        <Button Content="ADK Setup" HorizontalAlignment="Left" Margin="120,62,0,0" VerticalAlignment="Top" Click="adksetup" Width="72" Grid.Column="1" ToolTip="Quick silent installer for windows Assesment and Deployment Kit"/>
        <Button Content="ADK WPE Setup" HorizontalAlignment="Left" Margin="197,62,0,0" VerticalAlignment="Top" Click="ADKPESetup" Grid.Column="1" ToolTip="Quick silent installer for windows ADK PE Addon Setup"/>
        <Button Content="Get-MountedWimInfo" HorizontalAlignment="Left" Margin="50,110,0,0" VerticalAlignment="Top" Width="125" Click="getWIMInfo" Grid.Column="1"/>
    </Grid>
</Window>
