<Window x:Class="DimsISOTweaker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DimsISOTweaker"
        mc:Ignorable="d"
        Title="Dimi's PE builder" 
        Height="370" 
        Width="710"
        ResizeMode="NoResize">
    <Grid Margin="15,0,10,4" ContextMenuClosing="cleanResetBase" Background="#FF5D0F61">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="87*"/>
        </Grid.ColumnDefinitions>
        <GroupBox Header="WIM POSSIBLE ACTIONS" Margin="5,47,0,221" Grid.ColumnSpan="2" Foreground="#FFE9E411" FontWeight="Bold" FontStyle="Italic" FontSize="16" Background="#FF47AF99"/>
        <GroupBox Header="General Settings" Margin="5,-6,0,296" Grid.ColumnSpan="2" Background="#FF1A4532" FontWeight="Bold" FontStyle="Italic" FontSize="16" Foreground="#FFCFE014"/>
        <GroupBox Grid.Column="1" Header="Tasks" Margin="183,124,0,76" Background="#FF697CA7" Foreground="#FFD4D634" FontWeight="Bold" FontStyle="Italic" FontSize="16"/>
        <GroupBox Header="ADK SECTION" Margin="5,124,256,76" Grid.ColumnSpan="2" Foreground="#FFD3D61E" FontWeight="Bold" FontStyle="Italic" FontSize="16" Background="#FF6DA6C2"/>
        <Label Content="to" HorizontalAlignment="Left" Margin="97,74,0,0" VerticalAlignment="Top" Height="25" Width="21" Foreground="#FFDBE51B" Background="#FF630770" UseLayoutRounding="True"/>
        <TextBox x:Name="MountPoint" HorizontalAlignment="Left" Margin="121,79,0,0" TextWrapping="Wrap" Text="C:\MOUNT" VerticalAlignment="Top" Width="79" AutomationProperties.HelpText="test" Height="20" Foreground="#FFD9C721" Background="#FF1F69C0"/>
        <TextBox x:Name="Index" Margin="0,79,415,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" AutomationProperties.HelpText="test" Height="20" ToolTip="WIM Index (from wiminfo))!" Background="#FF1A62AC" Foreground="#FFE3D22B" Grid.Column="1" />
        <TextBox x:Name="ISO" HorizontalAlignment="Left" Margin="23,22,0,0" TextWrapping="Wrap" Text="C:\Users\Admin\Desktop\dewSystems\ISO\Gandalf10PE.ISO" VerticalAlignment="Top" Width="325" Height="20" ToolTip="Path to PE based ISO" Background="#FF0B63CB" Foreground="#FFDAC813" Grid.ColumnSpan="2" />
        <Button Content="Mount" HorizontalAlignment="Left" Margin="205,79,0,0" VerticalAlignment="Top" Width="40" Click="MountWIM" Height="20"/>
        <Button Content="UnMount" HorizontalAlignment="Left" Margin="25,79,0,0" VerticalAlignment="Top" Width="80" Click="UnMountWIM" Height="20" Grid.Column="1"/>
        <Button x:Name="Copy_WIM" Content="Copy WIM" HorizontalAlignment="Left" VerticalAlignment="Top" Width="65" Click="CopyWIM" Height="20" Margin="29,79,0,0" />
        <Button Content="Discard" HorizontalAlignment="Left" Margin="110,79,0,0" VerticalAlignment="Top" Width="65" Height="20" Click="UnMountWIMDiscard" Grid.Column="1"/>
        <Button Content="Cleanup Wim" HorizontalAlignment="Left" Margin="183,79,0,0" VerticalAlignment="Top" Width="97" Height="20" Click="CleanupWim" Grid.Column="1"/>
        <Button Content="Cleanup MountPoints" HorizontalAlignment="Left" Margin="288,79,0,0" VerticalAlignment="Top" Width="127" Height="20" Click="CleanUpMountPoints" Grid.Column="1"/>
        <Button Content="Install ADK" HorizontalAlignment="Left" Margin="20,155,0,0" VerticalAlignment="Top" Click="adksetup" Width="80" ToolTip="Quick silent installer for windows Assesment and Deployment Kit" Height="20"/>
        <Button Content="Install ADK PE" HorizontalAlignment="Left" Margin="20,189,0,0" VerticalAlignment="Top" Click="ADKPESetup" ToolTip="Quick silent installer for windows ADK PE Addon Setup" Height="20" Width="80"/>
        <Button x:Name="Help" Content="Help" HorizontalAlignment="Left" Margin="302,22,0,0" VerticalAlignment="Top" Click="about" Height="20" Width="36" Grid.Column="1"/>
        <Button Content="Shell" HorizontalAlignment="Left" VerticalAlignment="Top" Width="35" Click="SpawnAShell" Height="20" Margin="263,22,0,0" Grid.Column="1"/>
        <Button Content="Mount ISO" HorizontalAlignment="Left" Margin="103,22,0,0" VerticalAlignment="Top" Width="65" Click="MountISO" Height="20" Background="#FFE0DEDE" Foreground="#FF151609" BorderBrush="#FFD0D0D3" Grid.Column="1"/>
        <Button Content="Dismount" HorizontalAlignment="Left" Margin="173,22,0,0" VerticalAlignment="Top" Click="dismountISO" Height="20" Width="55" Grid.Column="1"/>
        <Button Content="Add drivers" HorizontalAlignment="Left" Margin="192,155,0,0" VerticalAlignment="Top" Width="106" Click="AddPEDrivers" Height="20" Grid.Column="1"/>
        <Button Content="Slipstream updates" HorizontalAlignment="Left" Margin="192,190,0,0" VerticalAlignment="Top" Click="SlipstreamKB" Height="20" Width="108" Grid.Column="1"/>
        <Button Content="add cabs" HorizontalAlignment="Left" Margin="191,234,0,0" VerticalAlignment="Top" ToolTip="these are the optional winPE components..." Height="20" Width="60" Click="addCabs" Grid.Column="1"/>
        <Button Content="add apps" HorizontalAlignment="Left" Margin="256,234,0,0" VerticalAlignment="Top" ToolTip="to add optiona apps... doesn't work though yet.." Height="20" Width="65" Grid.Column="1"/>
        <Button x:Name="WimInfo" Content="WimInfo" HorizontalAlignment="Left" VerticalAlignment="Top" Width="88" Click="getWIMInfo" Height="20" Margin="326,234,0,0" Grid.Column="1"/>
        <Button Content="MountedWimInfo" HorizontalAlignment="Left" Margin="305,190,0,0" VerticalAlignment="Top" Width="109" Click="getMountedWIMInfo" Height="20" Grid.Column="1"/>
        <Button Content="Get-Packages" HorizontalAlignment="Left" Margin="304,155,0,0" VerticalAlignment="Top" Width="110" Height="20" Click="getPackages" Grid.Column="1"/>
        <Button Content="MountWIM" HorizontalAlignment="Left" Margin="110,239,0,0" VerticalAlignment="Top" Width="76" ToolTip="Mount ADK Boot.wim" Height="20" Click="adkMountWIM"/>
        <Button Content="CopyPE" HorizontalAlignment="Left" Margin="110,155,0,0" VerticalAlignment="Top" Width="76" ToolTip="Copy ADK boot.wim" Height="20" Click="adkCopyPE"/>
        <Button Content="VALIDATION-OS" HorizontalAlignment="Left" Margin="110,189,0,0" VerticalAlignment="Top" Click="vOS" ToolTip="ValidationOS WIM Image" Height="21" Width="76"/>
        <Button Content="ADK WIMINFO" HorizontalAlignment="Left" Margin="197,155,0,0" VerticalAlignment="Top" Click="getADKWIMNFO" Width="100" Grid.ColumnSpan="2" />
        <Button Content="Optional Cabs" HorizontalAlignment="Left" Margin="197,189,0,0" VerticalAlignment="Top" Click="AddCabz" Width="100" Height="21" Grid.ColumnSpan="2"/>
        <Button Content="get-Packages" HorizontalAlignment="Left" Margin="197,238,0,0" VerticalAlignment="Top" Click="getADKPackages" Width="100" Grid.ColumnSpan="2" />
        <Button Content="Clean IMG" HorizontalAlignment="Left" Margin="62,155,0,0" VerticalAlignment="Top" Width="96" Height="20" Click="CleanupIMG" Grid.Column="1"/>
        <Button Content="UnmountWIM" HorizontalAlignment="Left" Margin="62,190,0,0" VerticalAlignment="Top" Click="UnmountAdkIMG" Width="96" Grid.Column="1"/>
        <Button Content="ExportWIM" HorizontalAlignment="Left" Margin="62,239,0,0" VerticalAlignment="Top" Click="ExportWIMAdk" Width="96" Grid.Column="1"/>
        <StatusBar Margin="0,304,0,0" Grid.ColumnSpan="2"/>
    </Grid>
</Window>
